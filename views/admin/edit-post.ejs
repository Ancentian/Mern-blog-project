<div class="admin-title">
    <h2>View/Edit Post</h2>
    <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" class="btn-delete btn" value="Delete">
    </form>
</div>

<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" placeholder="Post Title" value="<%= post.title %>" name="title">

    <label for="title">Body</label>
    <textarea name="body" rows="10" cols="50" id="" placeholder="Type the Post"><%= post.body %></textarea>

    <input type="submit" value="Update Post" class="btn">
</form>